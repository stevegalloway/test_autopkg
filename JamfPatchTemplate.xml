<patch_policy>
    <!-- General - Name, Enabled/Disabled, Triggers, Frequency, Categories -->
    <general>
        <name>%patch_name%</name>
        <enabled>true</enabled>
        <target_version>%version%</target_version>
        <distribution_method>prompt</distribution_method>
        <allow_downgrade>false</allow_downgrade>
        <patch_unknown>true</patch_unknown>
    </general>
    <!-- Scope -->
    <scope>
        <all_computers>false</all_computers>
        <computer_groups>
            <computer_group>
                <name>%GROUP_NAME%</name>
            </computer_group>
        </computer_groups>
        <exclusions/>
    </scope>
    <!-- User interaction e.g. start and finish messages -->
    <user_interaction>
        <message_start/>
        <message_finish/>
        <grace_period>
            <install_button_text>Update</install_button_text>
            <self_service_icon>
                <id>%patch_icon_id%</id>
            </self_service_icon>
            <!-- Notifications and Reminders -->
            <notifications>
                <notification_enabled>true</notification_enabled>
                <notification_type>Self Service and Notification Center</notification_type>
                <notification_subject>%NAME% update available</notification_subject>
                <reminders>
                    <notification_reminders_enabled>true</notification_reminders_enabled>
                    <notification_reminder_frequency>1</notification_reminder_frequency>
                </reminders>
            </notifications>
            <!-- Deadlines and Grace Period -->
            <deadlines>
                <deadline_enabled>true</deadline_enabled>
                <deadline_period>%SELF_SERVICE_DEADLINE_DAYS%</deadline_period>
            </deadlines>
            <grace_period>
                <grace_period_duration>15</grace_period_duration>
                <notification_center_subject>Important</notification_center_subject>
                <message>$APP_NAMES will quit in $DELAY_MINUTES minutes so that $SOFTWARE_TITLE can be updated. Save anything you are working on and quit the app(s).</message>
            </grace_period>
        </user_interaction>
        <software_title_configuration_id>%patch_softwaretitle_id%</software_title_configuration_id>
    </patch_policy>
